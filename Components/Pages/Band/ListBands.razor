@page "/listbands"

@rendermode InteractiveServer
@using System.Net.Http.Json
@using ShowTime.Models
@using ShowTime.Enums
@using ShowTime.Repositories.Interfaces
@inject IRepositoryBand RepositoryBand



    <MudDataGrid Items="@Elements" Hover="true" Bordered="true" Striped="true">
        <Columns>
            <PropertyColumn Property="x => x.Name" Title="Name" />
            <PropertyColumn Property="x => x.Genre" Title="Genre" />
        </Columns>
    </MudDataGrid>

@code { 
    private IEnumerable<Band> Elements = new List<Band>();

    protected override async Task OnInitializedAsync()
    {
        Elements = await RepositoryBand.GetAllAsync();
    }
}